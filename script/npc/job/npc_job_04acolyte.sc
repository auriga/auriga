moc_fild07.gat,41,355,4	script	修行中のシスター	95,{
	//アコライト転職
	if(Job == Job_Novice && CHANGE_AL >= 1) {
		mes "[マチルダ]";
		mes "巡礼者ですね？";
		mes "わざわざここまで来てもらって";
		mes "申し訳ありませんが、";
		mes "もうアコライトに転職する為の";
		mes "試験は撤廃されています。";
		next;
		mes "[マチルダ]";
		mes "まだアコライトへの道を";
