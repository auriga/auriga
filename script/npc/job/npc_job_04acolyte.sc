prt_fild00.gat,208,218,4	script	修行中の神父	98,{
	//アコライト転職
	if(Job == Job_Novice && CHANGE_AL >= 1) {
		mes "[洋介神父]";
		mes "君、アコライト修行者か？";
		mes "わざわざここまで来てもらった";
		mes "ところですまないが、";
		mes "もうアコライトに転職する為の";
		mes "試験は撤廃されているんだ。";
		next;
		mes "[洋介神父]";
		mes "まだアコライトへの道を";
