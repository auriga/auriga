			mes "[ドワーフ・グルンブルティ]";
			mes "貴様が欲しい神器は本当にそれか?!";
			mes "わしは忙しい!!";
			mes "貴様の都合に付き合う暇は無い！";
			mes "時間が無い。早く確かめろ！";
			close;
		}
	}
	mes "[ドワーフ・グルンブルティ]";
	mes "フハハッ！";
	mes "人間のためにこの技術を";
	mes "使うことになるとはな!!";
	mes "フン！　少し待ってろ！";
	next;
	if(Weight*100/MaxWeight >= 50) {
		mes "‐所持アイテムの重量が重い為";
		mes "　危険です。";
		mes "　所持アイテムを減らしてから、";
		mes "　再度話しかけてください‐";
		close;
	}
	if($GodSleipnir < 100 || $GodMagingiorde < 100 || $GodBrysinggamen < 100 || $GodMjolnir < 100) {
		mes "[ドワーフ・グルンブルティ]";
		mes "神器アイテムは既に誕生しているぞ。";
		mes "新たな神器アイテムを作るには";
		mes "封印が再び解けるのを待つしかない！";
		mes "つまり、今は作れないってことだ！";
		mes "フハハハッ！";
		close;
	}
	for(set '@i,0; '@i<getarraysize('@need); set '@i,'@i+1)
		delitem '@need['@i],'@amount['@i];
	getitem '@gain,1;
	set $GodSleipnir,0;
	set $GodMagingiorde,0;
	set $GodBrysinggamen,0;
	set $GodMjolnir,0;
	announce "ギルド[" + GetGuildName(getcharid(2)) + "]のギルドマスター[" + getguildmaster(getcharid(2)) + "]によって、神器アイテム[" +getitemname('@gain)+ "]が誕生しました。",0;
	mes "[ドワーフ・グルンブルティ]";
	mes "完成だ!!";
	switch('@gain) {
	case 2630:	// ブリーシンガメン
		mes "おお、神々しい光だな。";
		mes "さすがに貴様の存在自体も霞む。";
		mes "但し決して忘れるな。";
		break;
	case 2629:	// メギンギョルド
		mes "さすがに重々しい威厳を感じる。";
		mes "見ているだけでも圧倒されるな。";
		mes "但し決して忘れるな。";
		break;
	case 2410:	// スレイプニール
		mes "おお、羽よりも軽いぞ！　履いても";
		mes "ほとんど重さを感じないだろう。";
		mes "但し決して忘れるな。";
		break;
	case 1530:	// ミョルニール
		mes "見た目が小さいからといって";
		mes "軽んじるな！　このミョルニールより";
		mes "優れた武器はこの世に存在しない。";
		mes "そして、決して忘れるな。";
		break;
	}
	mes "宝は自ら主人を選ぶのだぞ。";
	close2;
	warp "prontera.gat",156,325;
	end;
